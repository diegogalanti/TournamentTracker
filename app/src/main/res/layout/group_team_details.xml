<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="team"
            type="com.gallardo.sportsoracle.data.network.model.NetworkTeam" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/team_position"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/team_flag"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="16dp"
            android:layout_width="16dp"
            android:background="@drawable/rounded_shape_16_16"
            android:clipToOutline="true"
            app:bind_image="@{team.flag}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/team_position"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/team_name"
            android:text="South Korea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/team_flag"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>